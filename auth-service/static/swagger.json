                    "summary": "Invalid token",
                    "value": {
                      "message": "Invalid token",
                      "errors": null,
                      "data": null
                    }
                  },
                  "user_not_found": {
                    "summary": "User not found",
                    "value": {
                      "message": "User not found",
                      "errors": null,
                      "data": null
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error generating tokens or updating session",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "examples": {
                  "generate_access_token_error": {
                    "summary": "Error generate access token",
                    "value": {
                      "message": "Error generate access token",
                      "errors": null,
                      "data": null
                    }
                  },
                  "generate_refresh_token_error": {
                    "summary": "Error generate refresh token",
                    "value": {
                      "message": "Error generate refresh token",
                      "errors": null,
                      "data": null
                    }
                  },
                  "update_session_error": {
                    "summary": "Error update user session",
                    "value": {
                      "message": "Error update user session",
                      "errors": null,
                      "data": null
                    }
                  },
                  "internal_error": {
                    "summary": "Internal server error",
                    "value": {
                      "message": "Internal server error",
                      "errors": null,
                      "data": null
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
