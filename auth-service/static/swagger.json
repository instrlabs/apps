                  "create_google_user_error": {
                    "summary": "Error create Google user",
                    "value": {
                      "message": "Error create Google user",
                      "errors": null,
                      "data": null
                    }
                  },
                  "update_google_id_error": {
                    "summary": "Error link Google account",
                    "value": {
                      "message": "Error link Google account",
                      "errors": null,
