    "/check": {
      "get": {
        "tags": [
          "UserHandler"
        ],
        "summary": "Check authentication status",
        "responses": {
          "200": {
            "description": "Authentication check",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessResponse"
                },
                "examples": {
                  "success": {
                    "summary": "Authentication check successful",
                    "value": {
                      "message": "Authentication check successful",
                      "errors": null,
                      "data": null
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/health": {
      "get": {
        "tags": [
          "Health"
        ],
        "summary": "Health check endpoint",
        "responses": {
          "200": {
            "description": "Service is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "ok"
                    },
                    "timestamp": {
                      "type": "string",
                      "format": "date-time",
                      "example": "2023-01-01T00:00:00Z"
                    },
                    "service": {
                      "type": "string",
                      "example": "auth-service"
                    }
                  }
                },
                "examples": {
                  "healthy": {
                    "summary": "Service is healthy",
                    "value": {
                      "status": "ok",
                      "timestamp": "2023-01-01T00:00:00Z",
                      "service": "auth-service"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "SuccessResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Operation successful"
          },
          "errors": {
            "type": "object",
            "nullable": true,
            "example": null
          },
          "data": {
            "type": "object",
            "nullable": true,
            "description": "Response payload (null if no data)"
          }
        },
        "required": [
          "message",
          "errors",
          "data"
        ]
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "An error occurred"
          },
          "errors": {
            "type": "object",
            "nullable": true,
            "description": "Response errors (null if no errors)"
          },
          "data": {
            "type": "object",
            "nullable": true,
            "example": null
          }
        },
        "required": [
          "message",
          "errors",
          "data"
        ]
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "507f1f77bcf86cd799439011"
          },
          "username": {
            "type": "string",
            "example": "johndoe"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "user@example.com"
          },
          "registered_at": {
            "type": "string",
            "format": "date-time",
            "example": "2023-01-01T00:00:00Z"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "example": "2023-01-01T00:00:00Z"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time",
            "example": "2023-01-01T00:00:00Z"
          }
        }
      },
      "UserSession": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "507f1f77bcf86cd799439011"
          },
          "user_id": {
            "type": "string",
            "example": "507f1f77bcf86cd799439012"
          },
          "ip_address": {
            "type": "string",
            "example": "192.168.1.1"
          },
          "is_active": {
            "type": "boolean",
            "example": true
          },
          "last_activity_at": {
            "type": "string",
            "format": "date-time",
            "example": "2023-01-01T00:00:00Z"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "example": "2023-01-01T00:00:00Z"
          }
        }
      },
      "LoginRequest": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "user@example.com"
          },
          "pin": {
            "type": "string",
            "example": "123456"
          }
        },
        "required": [
          "email",
          "pin"
        ]
      },
      "LoginResponse": {
        "type": "object",
        "properties": {
          "access_token": {
            "type": "string",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
          },
          "refresh_token": {
            "type": "string",
            "example": "dGhpcy1pcy1hLXJlZnJlc2gtdG9rZW4..."
          },
          "token_type": {
            "type": "string",
            "example": "Bearer"
          },
          "expires_in": {
            "type": "integer",
            "example": 3600
          }
        }
      },
      "RefreshTokenRequest": {
        "type": "object",
        "properties": {
          "refresh_token": {
            "type": "string",
            "example": "dGhpcy1pcy1hLXJlZnJlc2gtdG9rZW4..."
          }
        },
        "required": [
          "refresh_token"
        ]
      },
      "SendPinRequest": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "user@example.com"
          }
        },
        "required": [
          "email"
        ]
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "JWT access token from login or refresh response. Pass token in Authorization header as 'Bearer {token}'"
      }
    }
  }
}