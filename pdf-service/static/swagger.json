{
  "openapi": "3.0.3",
  "info": {
    "title": "PDF Service API",
    "description": "API for PDF compression and processing",
    "version": "1.0.0",
    "contact": {
      "name": "InstrLabs API Support",
      "email": "api@instrlabs.com"
    }
  },
  "servers": [],
  "paths": {
    "/api/v1/instructions": {
      "get": {
        "tags": ["Instructions"],
        "summary": "List user's PDF processing instructions",
        "description": "Retrieve a paginated list of PDF processing instructions for the authenticated user",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "description": "Maximum number of instructions to return (max 100)",
            "required": false,
            "schema": {"type": "integer", "default": 10, "minimum": 1, "maximum": 100}
          }
        ],
        "responses": {
          "200": {
            "description": "List of instructions",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {"type": "string"},
                    "errors": {"type": "array", "items": {"type": "string"}},
                    "data": {
                      "type": "array",
                      "items": {"$ref": "#/components/schemas/Instruction"}
                    }
                  }
                }
              }
            }
          },
          "401": {"$ref": "#/components/responses/Unauthorized"},
          "500": {"$ref": "#/components/responses/InternalServerError"}
        }
      },
      "post": {
        "tags": ["Instructions"],
        "summary": "Create a new PDF processing instruction",
        "description": "Create a new instruction for PDF processing with specified product",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["productId"],
                "properties": {
                  "productId": {
                    "type": "string",
                    "description": "Product ID for PDF processing",
                    "example": "507f1f77bcf86cd799439011"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Instruction created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {"type": "string"},
                    "errors": {"type": "array", "items": {"type": "string"}},
                    "data": {"$ref": "#/components/schemas/Instruction"}
                  }
                }
              }
            }
          },
          "400": {"$ref": "#/components/responses/BadRequest"},
          "401": {"$ref": "#/components/responses/Unauthorized"},
          "404": {"$ref": "#/components/responses/NotFound"},
          "500": {"$ref": "#/components/responses/InternalServerError"}
        }
      }
    },
    "/api/v1/instructions/{id}": {
      "get": {
        "tags": ["Instructions"],
        "summary": "Get PDF instruction by ID",
        "description": "Retrieve a specific PDF processing instruction by ID",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Instruction ID",
            "schema": {"type": "string"}
          }
        ],
        "responses": {
          "200": {
            "description": "Instruction details",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {"type": "string"},
                    "errors": {"type": "array", "items": {"type": "string"}},
                    "data": {"$ref": "#/components/schemas/Instruction"}
                  }
                }
              }
            }
          },
          "400": {"$ref": "#/components/responses/BadRequest"},
          "401": {"$ref": "#/components/responses/Unauthorized"},
          "403": {"$ref": "#/components/responses/Forbidden"},
          "404": {"$ref": "#/components/responses/NotFound"},
          "500": {"$ref": "#/components/responses/InternalServerError"}
        }
      }
    },
    "/api/v1/instructions/{id}/details": {
      "get": {
        "tags": ["Instructions"],
        "summary": "Get instruction details (files)",
        "description": "Retrieve all file details associated with a specific instruction",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Instruction ID",
            "schema": {"type": "string"}
          }
        ],
        "responses": {
          "200": {
            "description": "Instruction details",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {"type": "string"},
                    "errors": {"type": "array", "items": {"type": "string"}},
                    "data": {
                      "type": "array",
                      "items": {"$ref": "#/components/schemas/InstructionDetail"}
                    }
                  }
                }
              }
            }
          },
          "400": {"$ref": "#/components/responses/BadRequest"},
          "401": {"$ref": "#/components/responses/Unauthorized"},
          "403": {"$ref": "#/components/responses/Forbidden"},
          "404": {"$ref": "#/components/responses/NotFound"},
          "500": {"$ref": "#/components/responses/InternalServerError"}
        }
      },
      "post": {
        "tags": ["Instructions"],
        "summary": "Upload PDF file for processing",
        "description": "Upload a PDF file to be processed according to the instruction",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Instruction ID",
            "schema": {"type": "string"}
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": ["file"],
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary",
                    "description": "PDF file to compress (max 50MB)"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "File uploaded successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {"type": "string"},
                    "errors": {"type": "array", "items": {"type": "string"}},
                    "data": {
                      "type": "array",
                      "items": {"$ref": "#/components/schemas/InstructionDetail"}
                    }
                  }
                }
              }
            }
          },
          "400": {"$ref": "#/components/responses/BadRequest"},
          "401": {"$ref": "#/components/responses/Unauthorized"},
          "403": {"$ref": "#/components/responses/Forbidden"},
          "404": {"$ref": "#/components/responses/NotFound"},
          "413": {"$ref": "#/components/responses/RequestEntityTooLarge"},
          "500": {"$ref": "#/components/responses/InternalServerError"}
        }
      }
    },
    "/api/v1/instructions/{id}/details/{detailId}": {
      "get": {
        "tags": ["Instructions"],
        "summary": "Get instruction detail metadata",
        "description": "Retrieve metadata for a specific file within an instruction",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Instruction ID",
            "schema": {"type": "string"}
          },
          {
            "name": "detailId",
            "in": "path",
            "required": true,
            "description": "Detail ID",
            "schema": {"type": "string"}
          }
        ],
        "responses": {
          "200": {
            "description": "Instruction detail metadata",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {"type": "string"},
                    "errors": {"type": "array", "items": {"type": "string"}},
                    "data": {"$ref": "#/components/schemas/InstructionDetail"}
                  }
                }
              }
            }
          },
          "400": {"$ref": "#/components/responses/BadRequest"},
          "404": {"$ref": "#/components/responses/NotFound"},
          "500": {"$ref": "#/components/responses/InternalServerError"}
        }
      }
    },
    "/api/v1/instructions/{id}/details/{detailId}/file": {
      "get": {
        "tags": ["Instructions"],
        "summary": "Download processed PDF file",
        "description": "Download the processed PDF file (input or compressed output)",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Instruction ID",
            "schema": {"type": "string"}
          },
          {
            "name": "detailId",
            "in": "path",
            "required": true,
            "description": "Detail ID",
            "schema": {"type": "string"}
          }
        ],
        "responses": {
          "200": {
            "description": "PDF file download",
            "content": {
              "application/pdf": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            },
            "headers": {
              "Content-Disposition": {
                "description": "File attachment information",
                "schema": {"type": "string"}
              }
            }
          },
          "400": {"$ref": "#/components/responses/BadRequest"},
          "401": {"$ref": "#/components/responses/Unauthorized"},
          "403": {"$ref": "#/components/responses/Forbidden"},
          "404": {"$ref": "#/components/responses/NotFound"},
          "500": {"$ref": "#/components/responses/InternalServerError"}
        }
      }
    },
    "/api/v1/products": {
      "get": {
        "tags": ["Products"],
        "summary": "List available PDF processing products",
        "description": "Retrieve list of available PDF compression products",
        "security": [{"bearerAuth": []}],
        "responses": {
          "200": {
            "description": "List of PDF processing products",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {"type": "string"},
                    "errors": {"type": "array", "items": {"type": "string"}},
                    "data": {
                      "type": "array",
                      "items": {"$ref": "#/components/schemas/Product"}
                    }
                  }
                }
              }
            }
          },
          "401": {"$ref": "#/components/responses/Unauthorized"},
          "500": {"$ref": "#/components/responses/InternalServerError"}
        }
      }
    },
    "/api/v1/files": {
      "get": {
        "tags": ["Admin"],
        "summary": "List uncleaned files",
        "description": "Administrative endpoint to list files that haven't been cleaned up",
        "responses": {
          "200": {
            "description": "List of uncleaned files",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {"type": "string"},
                    "errors": {"type": "array", "items": {"type": "string"}},
                    "data": {
                      "type": "array",
                      "items": {"$ref": "#/components/schemas/InstructionDetail"}
                    }
                  }
                }
              }
            }
          },
          "500": {"$ref": "#/components/responses/InternalServerError"}
        }
      }
    },
    "/health": {
      "get": {
        "tags": ["Health"],
        "summary": "Health check",
        "description": "Check service health status",
        "responses": {
          "200": {
            "description": "Service is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {"type": "string", "example": "ok"},
                    "timestamp": {"type": "string", "format": "date-time"},
                    "service": {"type": "string", "example": "pdf-service"}
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Instruction": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique instruction identifier",
            "example": "507f1f77bcf86cd799439011"
          },
          "userId": {
            "type": "string",
            "description": "User who created the instruction",
            "example": "user123"
          },
          "productId": {
            "type": "string",
            "description": "Product ID for processing",
            "example": "507f1f77bcf86cd799439011"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "When the instruction was created"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "When the instruction was last updated"
          }
        }
      },
      "InstructionDetail": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique detail identifier",
            "example": "507f1f77bcf86cd799439012"
          },
          "fileName": {
            "type": "string",
            "description": "Original filename",
            "example": "document.pdf"
          },
          "fileSize": {
            "type": "integer",
            "format": "int64",
            "description": "File size in bytes",
            "example": 1048576
          },
          "status": {
            "type": "string",
            "enum": ["PENDING", "PROCESSING", "DONE", "FAILED", "CLEANED"],
            "description": "Processing status"
          },
          "type": {
            "type": "string",
            "enum": ["input", "output"],
            "description": "File type"
          },
          "filePath": {
            "type": "string",
            "description": "S3 file path",
            "example": "pdfs/507f1f77bcf86cd799439011_output.pdf"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "When the detail was created"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "When the detail was last updated"
          }
        }
      },
      "Product": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique product identifier",
            "example": "507f1f77bcf86cd799439013"
          },
          "key": {
            "type": "string",
            "description": "Product key for processing",
            "example": "compress"
          },
          "name": {
            "type": "string",
            "description": "Display name of the product",
            "example": "PDF Compression"
          },
          "type": {
            "type": "string",
            "description": "Product type category",
            "example": "pdf"
          },
          "price": {
            "type": "number",
            "format": "double",
            "description": "Product price",
            "example": 0.99
          },
          "active": {
            "type": "boolean",
            "description": "Whether the product is active",
            "example": true
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "When the product was created"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "When the product was last updated"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "responses": {
      "BadRequest": {
        "description": "Bad request",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {"type": "string"},
                "errors": {"type": "array", "items": {"type": "string"}},
                "data": {"type": "null"}
              }
            }
          }
        }
      },
      "Unauthorized": {
        "description": "Unauthorized access",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {"type": "string"},
                "errors": {"type": "array", "items": {"type": "string"}},
                "data": {"type": "null"}
              }
            }
          }
        }
      },
      "Forbidden": {
        "description": "Access forbidden",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {"type": "string"},
                "errors": {"type": "array", "items": {"type": "string"}},
                "data": {"type": "null"}
              }
            }
          }
        }
      },
      "NotFound": {
        "description": "Resource not found",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {"type": "string"},
                "errors": {"type": "array", "items": {"type": "string"}},
                "data": {"type": "null"}
              }
            }
          }
        }
      },
      "RequestEntityTooLarge": {
        "description": "File too large",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {"type": "string"},
                "errors": {"type": "array", "items": {"type": "string"}},
                "data": {"type": "null"}
              }
            }
          }
        }
      },
      "InternalServerError": {
        "description": "Internal server error",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {"type": "string"},
                "errors": {"type": "array", "items": {"type": "string"}},
                "data": {"type": "null"}
              }
            }
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Instructions",
      "description": "PDF processing instruction management"
    },
    {
      "name": "Products",
      "description": "PDF processing products"
    },
    {
      "name": "Admin",
      "description": "Administrative endpoints"
    },
    {
      "name": "Health",
      "description": "Health check endpoints"
    }
  ]
}