{
  "mcpServers": {
    "figma": {
      "type": "http",
      "url": "https://mcp.figma.com/mcp"
    },
    "next-devtools": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "next-devtools-mcp@latest"
      ],
      "env": {}
    },
    "mongodb": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "mcp-mongo-server"
      ],
      "env": {
        "MCP_MONGODB_URI": "${MONGO_URI}",
        "MCP_MONGODB_READONLY": "true"
      }
    }
  }
}