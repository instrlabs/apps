                    "value": { "message": "invalid instruction id", "errors": null, "data": null }
                  },
                  "invalid_detail_id": {
                    "value": { "message": "invalid detail id", "errors": null, "data": null }
                  }
                }
              }
            }
          },
          "403": {
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/StandardResponse" },
                "examples": {
                  "forbidden": {
                    "value": { "message": "forbidden", "errors": null, "data": null }
                  }
                }
              }
            }
          },
          "404": {
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/StandardResponse" },
                "examples": {
                  "instruction_not_found": {
                    "value": { "message": "instruction not found", "errors": null, "data": null }
                  },
                  "detail_not_found": {
                    "value": { "message": "detail not found", "errors": null, "data": null }
                  },
                  "file_not_found": {
                    "value": { "message": "file blob not found", "errors": null, "data": null }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "tags": [
    { "name": "health" },
    { "name": "instructions" }
  ]
}
