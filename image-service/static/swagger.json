{
  "openapi": "3.0.3",
  "info": {
    "title": "Image Service API",
    "version": "1.0.0"
  },
  "servers": [],
  "components": {
    "schemas": {
      "Instruction": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "ObjectId", "example": "507f1f77bcf86cd799439011" },
          "user_id": { "type": "string", "format": "ObjectId", "example": "507f1f77bcf86cd799439011" },
          "product_id": { "type": "string", "format": "ObjectId", "example": "507f1f77bcf86cd799439011" },
          "created_at": { "type": "string", "format": "date-time", "example": "2024-01-01T00:00:00Z" },
          "updated_at": { "type": "string", "format": "date-time", "example": "2024-01-01T00:00:00Z" }
        }
      },
      "InstructionFile": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "ObjectId", "example": "507f1f77bcf86cd799439011" },
          "instruction_id": { "type": "string", "format": "ObjectId", "example": "507f1f77bcf86cd799439011" },
          "file_name": { "type": "string", "example": "images/6051f77bcf86cd799439011.jpg" },
          "file_path": { "type": "string", "example": "images/6051f77bcf86cd799439011.jpg" },
          "file_size": { "type": "integer", "format": "int64", "example": 1024000 },
          "mime_type": { "type": "string", "example": "image/jpeg" },
          "status": {
            "type": "string",
            "enum": ["PENDING", "PROCESSING", "SUCCESS", "FAILED"],
            "example": "SUCCESS"
          },
          "output_id": {
            "type": ["string", "null"],
            "format": "ObjectId",
            "nullable": true,
            "example": "507f1f77bcf86cd799439012"
          },
          "created_at": { "type": "string", "format": "date-time", "example": "2024-01-01T00:00:00Z" },
          "updated_at": { "type": "string", "format": "date-time", "example": "2024-01-01T00:00:00Z" }
        }
      },
      "StandardResponse": {
        "type": "object",
        "properties": {
          "message": { "type": "string" },
          "errors": { "type": ["array", "null"], "items": { "type": "string" }, "nullable": true },
          "data": { "type": ["object", "null"], "nullable": true }
        }
      }
    },
    "securitySchemes": {
      "x-authenticated": {
        "type": "apiKey",
        "in": "header",
        "name": "x-authenticated"
      },
      "x-user-id": {
        "type": "apiKey",
        "in": "header",
        "name": "x-user-id"
      },
      "x-user-origin": {
        "type": "apiKey",
        "in": "header",
        "name": "x-user-origin"
      }
    }
  },
  "paths": {
    "/health": {
      "get": {
        "summary": "Health check",
        "tags": ["health"],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string", "example": "ok" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/instructions": {
      "post": {
        "summary": "Create a new instruction",
        "tags": ["instructions"],
        "security": [{ "x-authenticated": [], "x-user-id": [], "x-user-origin": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["product_id"],
                "properties": {
                  "product_id": { "type": "string", "format": "ObjectId", "example": "507f1f77bcf86cd799439011" }
                }
              },
              "examples": {
                "create": {
                  "value": { "product_id": "507f1f77bcf86cd799439011" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string", "example": "instruction creation successful" },
                    "errors": { "type": "null" },
                    "data": {
                      "type": "object",
                      "properties": {
                        "instruction": { "$ref": "#/components/schemas/Instruction" }
                      }
                    }
                  }
                },
                "examples": {
                  "success": {
                    "value": {
                      "message": "instruction creation successful",
                      "errors": null,
                      "data": {
                        "instruction": {
                          "id": "507f1f77bcf86cd799439011",
                          "user_id": "507f1f77bcf86cd799439011",
                          "product_id": "507f1f77bcf86cd799439011",
                          "created_at": "2024-01-01T00:00:00Z",
                          "updated_at": "2024-01-01T00:00:00Z"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/StandardResponse" },
                "examples": {
                  "invalid_body": {
                    "value": { "message": "invalid request body", "errors": null, "data": null }
                  },
                  "missing_product": {
                    "value": { "message": "ProductID is required", "errors": null, "data": null }
                  }
                }
              }
            }
          },
          "404": {
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/StandardResponse" },
                "examples": {
                  "not_found": {
                    "value": { "message": "product not found", "errors": null, "data": null }
                  }
                }
              }
            }
          },
          "500": {
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/StandardResponse" },
                "examples": {
                  "server_error": {
                    "value": { "message": "failed to create instruction", "errors": null, "data": null }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/instructions/{id}": {
      "get": {
        "summary": "Get instruction by ID",
        "tags": ["instructions"],
        "security": [{ "x-authenticated": [], "x-user-id": [], "x-user-origin": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": { "type": "string", "format": "ObjectId", "example": "507f1f77bcf86cd799439011" }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string", "example": "ok" },
                    "errors": { "type": "null" },
                    "data": {
                      "type": "object",
                      "properties": {
                        "instruction": { "$ref": "#/components/schemas/Instruction" }
                      }
                    }
                  }
                },
                "examples": {
                  "success": {
                    "value": {
                      "message": "ok",
                      "errors": null,
                      "data": {
                        "instruction": {
                          "id": "507f1f77bcf86cd799439011",
                          "user_id": "507f1f77bcf86cd799439011",
                          "product_id": "507f1f77bcf86cd799439011",
                          "created_at": "2024-01-01T00:00:00Z",
                          "updated_at": "2024-01-01T00:00:00Z"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/StandardResponse" },
                "examples": {
                  "invalid_id": {
                    "value": { "message": "invalid id", "errors": null, "data": null }
                  }
                }
              }
            }
          },
          "404": {
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/StandardResponse" },
                "examples": {
                  "not_found": {
                    "value": { "message": "instruction not found", "errors": null, "data": null }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Upload file to instruction",
        "tags": ["instructions"],
        "security": [{ "x-authenticated": [], "x-user-id": [], "x-user-origin": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": { "type": "string", "format": "ObjectId", "example": "507f1f77bcf86cd799439011" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": ["file"],
                "properties": {
                  "file": { "type": "string", "format": "binary" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string", "example": "file created" },
                    "errors": { "type": "null" },
                    "data": {
                      "type": "object",
                      "properties": {
                        "input": { "$ref": "#/components/schemas/InstructionFile" },
                        "output": { "$ref": "#/components/schemas/InstructionFile" }
                      }
                    }
                  }
                },
                "examples": {
                  "success": {
                    "value": {
                      "message": "file created",
                      "errors": null,
                      "data": {
                        "input": {
                          "id": "507f1f77bcf86cd799439011",
                          "instruction_id": "507f1f77bcf86cd799439011",
                          "file_name": "images/507f1f77bcf86cd799439011.jpg",
                          "file_path": "images/507f1f77bcf86cd799439011.jpg",
                          "file_size": 1024000,
                          "mime_type": "image/jpeg",
                          "status": "PENDING",
                          "output_id": "507f1f77bcf86cd799439012",
                          "created_at": "2024-01-01T00:00:00Z",
                          "updated_at": "2024-01-01T00:00:00Z"
                        },
                        "output": {
                          "id": "507f1f77bcf86cd799439012",
                          "instruction_id": "507f1f77bcf86cd799439011",
                          "file_name": "images/507f1f77bcf86cd799439012.jpg",
                          "file_path": "images/507f1f77bcf86cd799439012.jpg",
                          "file_size": 0,
                          "mime_type": "image/jpeg",
                          "status": "PENDING",
                          "output_id": null,
                          "created_at": "2024-01-01T00:00:00Z",
                          "updated_at": "2024-01-01T00:00:00Z"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/StandardResponse" },
                "examples": {
                  "invalid_id": {
                    "value": { "message": "invalid instruction id", "errors": null, "data": null }
                  },
                  "no_file": {
                    "value": { "message": "failed to read uploaded file", "errors": null, "data": null }
                  },
                  "file_too_large": {
                    "value": { "message": "fileSize too large", "errors": null, "data": null }
                  },
                  "invalid_type": {
                    "value": { "message": "invalid file type", "errors": null, "data": null }
                  }
                }
              }
            }
          },
          "403": {
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/StandardResponse" },
                "examples": {
                  "forbidden": {
                    "value": { "message": "user not authorized to create instruction details", "errors": null, "data": null }
                  }
                }
              }
            }
          },
          "404": {
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/StandardResponse" },
                "examples": {
                  "not_found": {
                    "value": { "message": "instruction not found", "errors": null, "data": null }
                  }
                }
              }
            }
          },
          "500": {
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/StandardResponse" },
                "examples": {
                  "create_failed": {
                    "value": { "message": "failed to create file records", "errors": ["database error"], "data": null }
                  },
                  "upload_failed": {
                    "value": { "message": "upload failed", "errors": ["failed to upload file to storage: connection error"], "data": null }
                  },
                  "queue_failed": {
                    "value": { "message": "failed to queue processing request", "errors": ["failed to publish to message queue: connection error"], "data": null }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/instructions/{id}/{detail_id}": {
      "get": {
        "summary": "Get instruction detail",
        "tags": ["instructions"],
        "security": [{ "x-authenticated": [], "x-user-id": [], "x-user-origin": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": { "type": "string", "format": "ObjectId", "example": "507f1f77bcf86cd799439011" }
          },
          {
            "in": "path",
            "name": "detail_id",
            "required": true,
            "schema": { "type": "string", "format": "ObjectId", "example": "507f1f77bcf86cd799439012" }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string", "example": "ok" },
                    "errors": { "type": "null" },
                    "data": {
                      "type": "object",
                      "properties": {
                        "detail": { "$ref": "#/components/schemas/InstructionFile" }
                      }
                    }
                  }
                },
                "examples": {
                  "success": {
                    "value": {
                      "message": "ok",
                      "errors": null,
                      "data": {
                        "detail": {
                          "id": "507f1f77bcf86cd799439011",
                          "instruction_id": "507f1f77bcf86cd799439011",
                          "file_name": "images/507f1f77bcf86cd799439011.jpg",
                          "file_path": "images/507f1f77bcf86cd799439011.jpg",
                          "file_size": 1024000,
                          "mime_type": "image/jpeg",
                          "status": "SUCCESS",
                          "output_id": "507f1f77bcf86cd799439012",
                          "created_at": "2024-01-01T00:00:00Z",
                          "updated_at": "2024-01-01T00:00:00Z"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/StandardResponse" },
                "examples": {
                  "missing_params": {
                    "value": { "message": "instruction id and detail id required", "errors": null, "data": null }
                  },
                  "invalid_instruction_id": {
                    "value": { "message": "invalid instruction id", "errors": null, "data": null }
                  },
                  "invalid_detail_id": {
                    "value": { "message": "invalid detail id", "errors": null, "data": null }
                  }
                }
              }
            }
          },
          "403": {
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/StandardResponse" },
                "examples": {
                  "forbidden": {
                    "value": { "message": "forbidden", "errors": null, "data": null }
                  }
                }
              }
            }
          },
          "404": {
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/StandardResponse" },
                "examples": {
                  "instruction_not_found": {
                    "value": { "message": "instruction not found", "errors": null, "data": null }
                  },
                  "detail_not_found": {
                    "value": { "message": "instruction detail not found", "errors": null, "data": null }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/instructions/{id}/{detail_id}/file": {
      "get": {
        "summary": "Download file",
        "tags": ["instructions"],
        "security": [{ "x-authenticated": [], "x-user-id": [], "x-user-origin": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": { "type": "string", "format": "ObjectId", "example": "507f1f77bcf86cd799439011" }
          },
          {
            "in": "path",
            "name": "detail_id",
            "required": true,
            "schema": { "type": "string", "format": "ObjectId", "example": "507f1f77bcf86cd799439012" }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/octet-stream": {
                "schema": { "type": "string", "format": "binary" }
              }
            }
          },
          "400": {
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/StandardResponse" },
                "examples": {
                  "missing_params": {
                    "value": { "message": "instruction id and detail id required", "errors": null, "data": null }
